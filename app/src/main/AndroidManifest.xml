        android:supportsRtl="true"
        android:theme="@style/Theme.MyMobileApp"
        tools:targetApi="31">
        <activity
            android:name=".MainPage.MainPage"
            android:exported="false" />
        <activity
            android:name=".CarSearch.SearchResult"
            android:exported="false" />
        <activity
            android:name=".CarSearch.Loader"
