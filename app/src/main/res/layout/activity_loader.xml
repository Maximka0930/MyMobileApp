<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CarSearch.Loader"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginVertical="225dp"
        android:layout_marginStart="54dp"
        android:layout_marginEnd="42dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginVertical="54dp"
            android:gravity="center"
            android:orientation="vertical"
            >
            
            <ImageView
                android:layout_width="150dp"
                android:layout_height="65dp"
                android:src="@drawable/find_car_icon"
                android:layout_marginBottom="20dp"
                android:layout_marginHorizontal="65dp"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="Ищем подходящие автомобили"
                android:textSize="16sp"
                android:textColor="#000000"/>
            <ImageView
                android:layout_width="218dp"
                android:layout_height="30dp"
                android:src="@drawable/rectangle_icon"
                android:layout_marginBottom="32dp"
                android:layout_marginHorizontal="65dp"

                />

        </LinearLayout>





    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>