<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Authorization.GettingStartedActivity"
    android:background="@color/white"
    >


    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="342dp"
        android:layout_height="54dp"
        android:layout_marginTop="112dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <TextView
            android:layout_width="124dp"
            android:layout_height="29dp"
            android:text="@string/splashScreen_MainText"
            android:textColor="#2A1246"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="342dp"
            android:layout_height="17dp"
            android:layout_gravity="bottom"
            android:text="@string/splashScreen_DesText"
            android:textColor="#B2000000"
            android:textSize="14sp"


            />


    </FrameLayout>

    <ImageView
        android:layout_width="343dp"
        android:layout_height="343dp"
        android:layout_gravity="center"
        android:layout_marginTop="225dp"
        android:layout_marginHorizontal="23dp"
        android:src="@drawable/splash_screen_img"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:onClick="openLoginActivity"
        android:layout_width="342dp"
        android:layout_height="52dp"
        android:layout_marginTop="618dp"
        android:backgroundTint="#2A1246"
        app:cornerRadius="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Войти"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        />

    <com.google.android.material.button.MaterialButton
        android:onClick="openSignUpActivity"
        android:layout_width="342dp"
        android:layout_height="52dp"
        android:layout_marginTop="686dp"
        android:backgroundTint="#FFFFFF"
        app:cornerRadius="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Зарегистрироваться"
        android:textSize="16sp"
        android:textColor="#344054"
        app:strokeColor="#D0D5DD"
        app:strokeWidth="1dp"
        />



</androidx.constraintlayout.widget.ConstraintLayout>